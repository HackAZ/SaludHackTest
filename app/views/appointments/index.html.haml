%script{:src => "https://api.mapbox.com/mapbox.js/v2.2.4/mapbox.js"}
%link{:href => "https://api.mapbox.com/mapbox.js/v2.2.4/mapbox.css", :rel => "stylesheet"}/
.container
  .row
    .appointments
      %h1 Your Preferred Times
      .appointmentInfo
        %table.table.table-responsive
          %thead
            %tr
              %th Clinic name
              %th Days
              %th Time of day
              %th

          %tbody
            - @appointments.each do |appointment|
              %tr
                %td= appointment.clinic_name
                %td= appointment.days
                %td= appointment.time_of_day
                %td= link_to image_tag("white_arrow.png"), appointment, class: :'white_arrow'
    
