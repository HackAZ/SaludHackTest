= form_for(@provider) do |f|
  - if @provider.errors.any?
    #error_explanation
      %h2
        = pluralize(@provider.errors.count, "error")
        prohibited this provider from being saved:
      %ul
        - @provider.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .field
    = f.label :phone_number
    %br/
    = f.text_field :phone_number
  .field
    = f.label :rating
    %br/
    = f.number_field :rating
  .field
    = f.label :provider_type
    %br/
    = f.text_field :provider_type
  .field
    = f.label :specialization
    %br/
    = f.text_field :specialization
  .actions
    = f.submit
