.container
  = form_for(@provider) do |f|
    - if @provider.errors.any?
      #error_explanation
        %h2
          = pluralize(@provider.errors.count, "error")
          prohibited this provider from being saved:
        %ul
          - @provider.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :name
      = f.text_field :name
      %br/
    .field
      = f.label :location
      = f.text_field :location
      %br/
    .field
      = f.label :phone_number
      = f.telephone_field :phone_number
      %br/
    .field
      = f.label :rating
      = f.number_field :rating
      %br/

    .field
      = f.label :provider_type
      = f.text_field :provider_type
      %br/

    .field
      = f.label :specialization
      = f.text_field :specialization
      %br/

    .actions
      = f.submit
